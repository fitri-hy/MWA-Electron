{
  "name": "M-WA",
  "version": "1.0.7",
  "description": "Whatsapp Web Multi Device. One Browser, Many Accounts",
  "main": "main.js",
  "author": "FhyLabs",
  "license": "MIT",
  "keywords": [
    "electron",
    "whatsapp",
    "desktop",
    "whatsapp-web",
    "whatsapp-md",
    "wabot"
  ],
  "scripts": {
    "start": "electron .",
    "dev:express": "nodemon app.js",
    "dev:electron": "electron .",
    "dev": "concurrently \"npm run watch:css\" \"npm run dev:express\" \"npm run dev:electron\"",
    "build:css": "npx postcss public/assets/css/tailwind.css -o public/assets/css/styles.css",
    "watch:css": "npx postcss public/assets/css/tailwind.css -o public/assets/css/styles.css --watch",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.fhylabs.mwa",
    "productName": "M-WA",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/assets/images/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "@google/genai": "^1.4.0",
    "@whiskeysockets/baileys": "^6.7.18",
    "adm-zip": "^0.5.16",
    "axios": "^1.9.0",
    "connect-flash": "^0.1.1",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "fs-extra": "^11.3.0",
    "http": "^0.0.1-security",
    "node-machine-id": "^1.1.12",
    "socket.io": "^4.8.1"
  }
}
